# .env
# ========== Global ==========
TZ=UTC

# ========== GitLab ==========
# Publicly reachable URL (use your LAN IP/domain); must match the port mapping in compose
GITLAB_EXTERNAL_URL=http://10.6.25.240:12345
GITLAB_HOSTNAME=gitlab.local
GITLAB_ROOT_PASSWORD=ChangeMe_SuperSecret
GITLAB_ROOT_EMAIL=root@example.com
GITLAB_SSH_PORT=2222

# ========== Redmine ==========
# Redmine admin API key (create in Redmine UI once running: My account â†’ API access key)
REDMINE_API_KEY=ChangeMe_RedmineApiKey
# Name of the Redmine custom field that stores the GitLab project URL
REDMINE_GITLAB_CF=GitLab Repo

# ========== Bridge ==========
# GitLab personal access token with "api" scope
GITLAB_TOKEN=ChangeMe_GitLabToken

# Poller controls
POLL_ENABLED=true
POLL_INTERVAL=60
POLL_JITTER=10

# Trackers to sync (array-style binding)
TRACKER0=Feature
TRACKER1=Bug

# ASP.NET env
ASPNETCORE_ENVIRONMENT=Production

# ========== Bridge Database (Postgres) ==========
BRIDGE_DB_HOST=bridge-db
BRIDGE_DB_PORT=5432
BRIDGE_DB_NAME=bridge
BRIDGE_DB_USER=bridge
BRIDGE_DB_PASSWORD=ChangeMe_BridgeDb

# Computed connection string (used by Bridge)
DB_CONN=Host=${BRIDGE_DB_HOST};Port=${BRIDGE_DB_PORT};Database=${BRIDGE_DB_NAME};Username=${BRIDGE_DB_USER};Password=${BRIDGE_DB_PASSWORD};Pooling=true
