# Endpoints
REDMINE_URL=http://redmine:3000
GITLAB_URL=http://gitlab

# Auth (fill in after first boot)
REDMINE_API_KEY=replace-with-redmine-admin-api-key
GITLAB_TOKEN=glpat-replace-with-personal-access-token

# Webhook shared secrets
REDMINE_WEBHOOK_SECRET=redmine-outbound-secret
GITLAB_WEBHOOK_SECRET=gitlab-outbound-secret

# Bridge behavior
# none     -> only log notes based on events (no shadow issues)
# mirror   -> maintain shadow GitLab issues labeled/assigned from Redmine
MIRROR_STRATEGY=mirror

# logging
LOG_LEVEL=INFO

GITLAB_ROOT_PASSWORD=MyStrongPass123!
GITLAB_ROOT_EMAIL=admin@example.com
TZ=Europe/Lisbon